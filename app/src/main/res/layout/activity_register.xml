<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.divan.sigmawayquiz.RegisterActivity">


    <EditText
        android:id="@+id/user"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/textView7"
        android:background="#11beb4b4"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:hint="Enter Name"
        android:textColorHint="#daffffff"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/user"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#11beb4b4"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#daffffff"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/pass2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/pass"
        android:background="#11beb4b4"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Confirm Password"
        android:textColorHint="#daffffff"
        android:inputType="textPassword" />

    <android.support.v7.widget.CardView
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/register"
            android:layout_marginEnd="13dp"
            android:onClick="btnRegister_Click">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:onClick="btnLoginBack_Click"
        android:text="Login Here!"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Registration Page"
        android:textColor="#b7000000"
        android:textSize="30sp" />



</RelativeLayout>
